#!/bin/sh
# Start/stop the P-Space status MQTT publish daemon.
#
### BEGIN INIT INFO
# Provides:          status_publishd
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: P-Space status MQTT publisher
### END INIT INFO

PATH=/bin:/usr/bin:/sbin:/usr/sbin
DESC="P-Space status MQTT publisher"
NAME=status_publishd
DAEMON=/usr/bin/status_publishd
PIDFILE=/var/run/status_publishd.pid
SCRIPTNAME=/etc/init.d/"$NAME"

test -f $DAEMON || exit 0

. /lib/lsb/init-functions


case "$1" in
start)	log_daemon_msg "Starting $DESC"
        start-stop-daemon -m --start --background --user space --name $NAME -p $PIDFILE --startas $DAEMON
        log_end_msg $?
	;;
stop)	log_daemon_msg "Stopping $DESC"
        start-stop-daemon --stop -p $PIDFILE
        RETVAL=$?
        [ $RETVAL -eq 0 ] && [ -e "$PIDFILE" ] && rm -f $PIDFILE
        log_end_msg $RETVAL
        ;;
restart) log_daemon_msg "Restarting $DESC"
        $0 stop
        $0 start
        ;;
status)
        status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
        ;;
*)	log_action_msg "Usage: /etc/init.d/status_publishd {start|stop|status|restart}"
        exit 2
        ;;
esac
exit 0
